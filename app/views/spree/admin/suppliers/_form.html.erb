</div>
<div class="row">
  <div class="col-md-12">
    <%= form.fields_for :supplier_description do |d| %>
        <h3>プロフィールページ</h3>
        <div class="form-group">
          <div class="row">
            <div class="col-md-6">
              <%= d.label :title, '写真(サイズは852x1140にリサイズされます)' %> <br>
              <%= d.file_field :image, required: !@object.supplier_description.image?, class: 'form-control' %>
            </div>
            <div class="col-md-6">
              <% if @object.supplier_description.image? %>
                  <%= image_tag @object.supplier_description.image.url(:small) %>
              <% else %>
                  <p>写真がありません</p>
              <% end %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= d.label :title, 'タイトル' %> <br>
          <%= d.text_field :title, required: true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= d.label :body, '本文' %> <br>
          <%= d.cktext_area :body, required: true, rows: 100, class: 'form-control' %>
        </div>
    <% end %>
  </div>
</div>
